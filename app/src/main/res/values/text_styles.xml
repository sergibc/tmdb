<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="movieTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:background">@color/title_background</item>
        <item name="android:gravity">center_vertical|right|end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/card_text_padding</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">-5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movieYear" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/title_background</item>
        <item name="android:gravity">center_vertical|right|end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/card_text_padding</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">-5</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="movieOverview" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/context_text_size</item>
    </style>
</resources>